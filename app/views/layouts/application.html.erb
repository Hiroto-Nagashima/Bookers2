<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body class="container-fluid">
    <header class="row d-block">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
            <div class="container">
                <a class="navbar-brand text-white" href="#">Bookers</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto ">
                        <% if user_signed_in? %>
                          <li class="nav-item ">
                            <%= link_to "Home", user_path(current_user.id) ,class: 'nav-link fas fa-home text-white'%></i>
                          </li>
                           <li class="nav-item">
                            <%= link_to "Users", users_path ,class: 'nav-link fas fa-users text-white'%>
                          </li>
                           <li class="nav-item">
                            <%= link_to "Books", books_path ,class: 'nav-link fas fa-book-open text-white'%>
                          </li>
                           <li class="nav-item">
                            <%= link_to "logout", destroy_user_session_path, method: :delete ,class: 'nav-link fas fa-sign-out-alt text-white' %>
                          </li>
                        <% else %>
                          <li class="nav-item ">
                           <%= link_to "Home", root_path , class: 'nav-link fas fa-home text-white' %>
                          </li>
                           <li class="nav-item">
                            <%= link_to "About", home_about_path ,class: 'nav-link fas fa-link text-white'%>
                          </li>
                           <li class="nav-item">
                            <%= link_to "sign up", new_user_registration_path ,class: 'nav-link fas fa-user-plus text-white' %>
                          </li>
                          <li class="nav-item">
                            <%= link_to "login", new_user_session_path ,class: 'nav-link fas fa-sign-in-alt text-white'%>
                          </li>
                        <% end %>
                    </ul>
                </div>
            </div>
       </nav>
    </header>

    <main class="mt-30">
        <%= yield %>
    </main>

 </body>
</html>
