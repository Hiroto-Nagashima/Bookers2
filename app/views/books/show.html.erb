<div class="container mt-3">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3 " >
    <%= render 'users/user_template', book: @book_new ,user: @user%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%><%= link_to "#{@book.user.name}", user_path(@user) %></td>
              <td><%= link_to "#{@book.title}"%></td>
              <td><%= @book.body %></td>
              <% if @book.user.id == current_user.id %>
                <td ><%= link_to 'Edit', edit_book_path(@book) ,class:"btn btn-success btn-sm text-white" %></td>
                <td ><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn btn-danger btn-sm text-white" , data: { confirm: '本当に消しますか？' } %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>