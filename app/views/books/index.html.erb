
<div class="container mt-4">
  <div class="row">
    <div class="col-md-3 " >
    <%= render 'users/user_template', book: @book ,user: @user%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
            <th>&nbsp;</th>
            <th>Title</th>
            <th>Opinion</th>
        </thead>

        <tbody>
              <% @books.each do |book| %>
            <tr>
                  <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%></td>
                  <td><%= link_to "#{book.title}" , book_path(book.id)%></td>
                  <td><%= book.body %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>