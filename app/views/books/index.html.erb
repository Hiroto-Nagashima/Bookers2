
<div class="container mt-4">
 <% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <p class="text-danger">error! <%= message %></p>
  <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-3 " >
    <%= render 'users/user_template', book: @book ,user: @user%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
            <th>&nbsp;</th>
            <th>Title</th>
            <th>Opinion</th>
        </thead>

        <tbody>
              <% @books.each do |book| %>
            <tr>
                  <td><%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%>
                    <% end %></td>
                  <td><%= link_to "#{book.title}" , book_path(book.id)%></td>
                  <td><%= book.body %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<footer class="container my-4 text-center">CopyRight Infratop.inc</footer>