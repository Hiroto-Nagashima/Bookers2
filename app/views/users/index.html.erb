
<div class="container mt-4">
  <div class="row">
    <div class="col-md-3 " >
    <%= render 'users/user_template', book: @book ,user: @user%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
            <th>image</th>
            <th>name</th>
        </thead>

        <tbody>
              <% @users.each do |user| %>
            <tr>
                  <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%></td>
                  <td><%= user.name %></td>
                  <td><%= link_to 'Show', user_path(user.id) %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>