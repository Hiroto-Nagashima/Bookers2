<div class="container mt-4">
  <% if flash[:notice] %>
    <p class="text-success"><%= flash[:notice] %></p>
  <% end %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-3" >
        <%= render 'user_template', book: @book ,user: @user%>
    </div>
    <div class="col-lg-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th >Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%></td>
              <td><%= link_to "#{book.title}" , book_path(book.id)%></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @books %>
    </div>
  </div>
</div>